    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.googlecode.android_scripting.activity.MainManager">

    <!-- Toolbar. -->
    <include
        android:id="@+id/toolbar"
